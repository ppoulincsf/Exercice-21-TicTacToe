<Application x:Class="Exercice21.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Exercice21"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Styles-->
        <Style x:Key="MainWindow" TargetType="Window">
            <Setter Property="Background" Value="#ecacad"/>
        </Style>
        <Style x:Key="Grid" TargetType="Grid">
            <Setter Property="Height" Value="300"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Margin" Value="30"/>
        </Style>
        <Style x:Key="GridLine" TargetType="Border">
            <Setter Property="BorderBrush" Value="#e69597"/>
        </Style>
        <Style x:Key="GridImage" TargetType="Image">
            <Setter Property="Margin" Value="20"/>
        </Style>
        <!--Templates-->
        <ControlTemplate x:Key="GridButton" TargetType="Button">
            <TextBlock/> <!--Dummy text block to make it clickable. -->
        </ControlTemplate>
    </Application.Resources>
</Application>
